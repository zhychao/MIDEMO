.user-hd {
    background: url("https://m.mi.com/static/img/bg.63c8e19851.png") center #F37D0F;
    background-size: auto 100%;
}
.user-hd .mi-user {
    font-size: 28rpx;
    padding: 25rpx;
}
.user-hd .mi-user .span {
    display: inline-block;
    text-align: center;
}
.user-hd .mi-user .span image {
    vertical-align: middle;
    width: 88rpx;
    height: 88rpx
}
.user-hd .mi-user text {
    color: #ffffff;
    display: inline-block;
    margin-left: 15rpx;
}
.orders {
    padding: 10rpx;
    font-size: 28rpx;
    color: #333;
    overflow: hidden;
    position: relative;
}
.orders .a2 {
    padding: 15rpx 0rpx;
}

.weui-cell_access {
    -webkit-tap-highlight-color: rgba(0,0,0,0);
