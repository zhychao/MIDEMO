}
.personal-center {
    background: #fff;
    border-top: solid 1px #ddd;
    padding: 30rpx 0rpx;
}

.weui-grids {
    position: relative;
    overflow: hidden;
}
.weui-grid {
    position: relative;
    float: left;
    padding: 20rpx 10rpx;
    width: 33.33333333%;
    box-sizing: border-box;
     border-right: 1px solid #d9d9d9;
}
.personal-center .weui-grid__icon {
    width: 50rpx;
    height: 50rpx;
        margin: 0 auto;
}
.weui-grid__icon image {
    display: block;
    width: 100%;
    height: 100%;
}
.personal-center .weui-grid__label {
    font-size: 28rpx;
}
.weui-grid__icon+.weui-grid__label {
    margin-top: 5rpx;
}
.weui-footer, .weui-grid__label {
    text-align: center;
    font-size: 14rpx;
}
.weui-grid__label {
    display: block;
    color: #000;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
